---
import CardBackground from "./CardBackground.astro";

const {title, id, description, technologies, backgroundCard} =  Astro.props.project
const imageURL = backgroundCard ? backgroundCard : "roraima-inverse.PNG"

---
<article class="relative rounded-lg overflow-hidden aspect-video transition-all" style={`background-image: linear-gradient(180deg, rgb(27 128 61) 0%, 7.34463%, rgb(22 110 52) 14.6893%, 57.3446%, rgb(45, 57, 57) 100%)`}>
    <a 
    href={`/projects/${id}`}
    class='group transition-all hover:scale-110 flex gap p-2 h-full items-center justify-center relative'>
        <CardBackground image={`/projects/${imageURL}`}/>
        <h2 class="text-white text-xl group-hover:scale-0">{title}</h2>
        <p class="absolute opacity-0 transition group-hover:opacity-100 ease-in duration-100 text-sm w-3/4">{description}</p>
        <ul class="absolute bottom-2 text-xs flex gap-x-2 group-hover:opacity-0">
            {technologies.map(tech=><li><code class="rounded-md px-2 py-1">{tech}</code></li>)}
        </ul>
    </a>
</article>